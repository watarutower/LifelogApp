<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/fragment_home">

    <fragment
        android:id="@+id/fragment_home"
        android:name="com.example.lifelogapp.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_fragment_home_to_fragment_update"
            app:destination="@id/fragment_update"
           />
        <action
            android:id="@+id/action_fragment_home_to_fragent_activitylog"
            app:destination="@id/fragent_activitylog" />
        <action
            android:id="@+id/action_fragment_home_to_fragment_history"
            app:destination="@id/fragment_history" />
    </fragment>

    <fragment
        android:id="@+id/fragent_activitylog"
        android:name="com.example.lifelogapp.ui.activitylog.ActivityLogFragment"
        tools:layout="@layout/fragment_activitylog" />

    <fragment
        android:id="@+id/fragment_history"
        android:name="com.example.lifelogapp.ui.history.HistoryFragment"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/fragment_mypage"
        android:name="com.example.lifelogapp.ui.mypage.MyPageFragment"
        tools:layout="@layout/fragment_mypage" >
        <action
            android:id="@+id/action_fragment_mypage_to_fragment_home"
            app:destination="@id/fragment_home" />
    </fragment>

    <fragment
        android:id="@+id/fragment_update"
        android:name="com.example.lifelogapp.ui.update.UpdateFragment"
        tools:layout="@layout/fragment_update" >
        <action
            android:id="@+id/action_fragment_update_to_fragment_home"
            app:destination="@id/fragment_home" />
    </fragment>
</navigation>